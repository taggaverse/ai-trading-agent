# BASE (Ethereum L2)
BASE_RPC_URL=https://mainnet.base.org
BASE_PRIVATE_KEY=0x...

# SOLANA
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_PRIVATE_KEY=base58_encoded_key

# HYPERLIQUID (Trading)
# IMPORTANT: Use your AGENT/API WALLET private key, not your main account key
# The agent will sign orders using this key
# If using an Agent Wallet, also specify your main account address below
HYPERLIQUID_PRIVATE_KEY=0x...

# Your main account address (required if using Agent Wallet)
# Leave blank if HYPERLIQUID_PRIVATE_KEY is your main account private key
HYPERLIQUID_WALLET_ADDRESS=0x...

# Optional: Vault or subaccount address if trading on behalf of a vault
HYPERLIQUID_VAULT_ADDRESS=0x...

# Network: true for testnet, false for mainnet
HYPERLIQUID_TESTNET=false

# Max leverage for orders (1-20)
HYPERLIQUID_MAX_LEVERAGE=2

# BSC (Binance Smart Chain)
BSC_RPC_URL=https://bsc-dataseed.binance.org
BSC_PRIVATE_KEY=0x...

# DREAMS ROUTER & x402
DREAMS_ROUTER_URL=https://router.daydreams.systems
X402_WALLET_ADDRESS=0x...
X402_PRIVATE_KEY=0x...
X402_NETWORK=base-sepolia

# BALANCE MANAGEMENT
MIN_BALANCE_USDC=1.0
REFILL_THRESHOLD_USDC=2.0
REFILL_AMOUNT_USDC=10.0

# TRADING
ACTIVE_CHAINS=base,solana,hyperliquid,bsc
PRIMARY_CHAIN=hyperliquid
TRADING_INTERVAL_MS=60000

# LOGGING
LOG_LEVEL=info
API_HOST=0.0.0.0
API_PORT=3000
